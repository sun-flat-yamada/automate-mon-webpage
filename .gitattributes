# Auto detect text files and normalize line endings to LF
* text=auto

# Shell scripts
*.sh text eol=lf
*.bash text eol=lf
*.zsh text eol=lf
*.fish text eol=lf
*.ps1 text eol=crlf

# Windows specific
*.bat text eol=crlf
*.cmd text eol=crlf
*.exe binary
*.dll binary
*.lib binary

# Documents
*.md text eol=lf diff=markdown
*.txt text eol=lf
*.csv text eol=lf
*.json text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.xml text eol=lf
*.html text eol=lf

# Code
*.js text eol=lf
*.ts text eol=lf
*.jsx text eol=lf
*.tsx text eol=lf
*.py text eol=lf
*.rb text eol=lf
*.java text eol=lf
*.go text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.webp binary
*.svg binary
*.ico binary
*.mov binary
*.mp4 binary
*.mp3 binary
*.gz binary
*.zip binary
*.7z binary
*.ttf binary
*.otf binary
*.woff binary
*.woff2 binary

# Git
.gitignore text eol=lf
.gitattributes text eol=lf
.github/** text eol=lf
